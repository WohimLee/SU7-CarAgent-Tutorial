{
  "version": "1.0",
  "description": "In-car assistant intent map for multi-agent & LangGraph routing",
  "domains": {
    "manual": "用户手册 / 车辆功能说明 / 告警含义",
    "vehicle": "车况查询 / 车辆控制",
    "navigation": "导航与路线规划",
    "trip": "跨步骤行程规划 / 组合任务",
    "infotainment": "媒体、音乐、电台等娱乐控制",
    "chitchat": "闲聊与通用问答",
    "system": "关于助手与系统本身的设置",
    "safety": "安全相关的特殊处理",
    "generic": "兜底 / 无法识别 / 二次澄清"
  },
  "intents": {
    "manual_feature_usage": {
      "domain": "manual",
      "action_type": "query",
      "description": "询问某个功能怎么用、怎么操作",
      "route": {
        "subgraph": "manual_rag_graph"
      },
      "slots": {
        "feature_name": {
          "type": "string",
          "description": "功能名称，例如 自适应巡航、自动泊车、车道保持 等"
        },
        "context_part": {
          "type": "string",
          "description": "车内位置或部件，例如 中控屏、方向盘左侧按键"
        }
      },
      "examples": [
        "怎么用自适应巡航？",
        "自动泊车怎么开启？",
        "方向盘上这个按键是干嘛的？"
      ],
      "safety": {
        "needs_safety_review": true,
        "tags": ["driving_sensitive"]
      }
    },
    "manual_warning_indicator": {
      "domain": "manual",
      "action_type": "query",
      "description": "询问仪表盘告警灯或提示灯含义",
      "route": {
        "subgraph": "manual_rag_graph"
      },
      "slots": {
        "indicator_color": {
          "type": "string",
          "description": "指示灯颜色，例如 红色、黄色、橙色"
        },
        "indicator_icon": {
          "type": "string",
          "description": "图标或文字描述，例如 发动机图标、三角形叹号"
        },
        "indicator_code": {
          "type": "string",
          "description": "若用户有读到故障码或代码，如 P0420"
        }
      },
      "examples": [
        "这个黄色发动机灯是什么意思？",
        "仪表盘上红色感叹号是啥？",
        "ABS灯亮了代表什么？"
      ],
      "safety": {
        "needs_safety_review": true,
        "tags": ["safety_critical"]
      }
    },
